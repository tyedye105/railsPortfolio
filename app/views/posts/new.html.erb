<div class="well">
  <%= render "/layouts/errors", :object => @post %>
<h1>Add a new blog post!</h1>
<%= form_for [@user, @post] do |f| %>
  <div class="form-group">
    <%=f.label :title  %>
    <%=f.text_field :title  %>
  </div>
  <div class="form-group">
    <%=f.label :content  %>
    <br>
    <%=f.text_area :content  %>
  </div>
  <%= f.hidden_field :user_id, :value => @user.id %>
  <%= f.submit  %>
</div>
<% end %>
</div>
